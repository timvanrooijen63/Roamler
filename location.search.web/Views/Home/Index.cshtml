@{
    ViewData["Title"] = "Location searcher";
}

<div class="text-center">
    <h1 class="display-4">Location searcher</h1>

    <div class="container my-4">
        <p class="font-weight-bold">Zoek een locatie</p>

        <p>Type something in the input field to search the table for first names, last names or emails:</p>
        <div class="form-inline">
        
            <input class="form-control mb-4" id="tableSearch" type="text" placeholder="Search..">

            <input class="form-control mb-4" id="tableSearch" type="text" placeholder="Lat">
            <input class="form-control mb-4" id="tableSearch" type="text" placeholder="Long">

            <input type="number">
        </div> 

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Firstname</th>
                    <th>Lastname</th>
                    <th>Email</th>
                </tr>
            </thead>
            <tbody id="myTable">
                <tr>
                    <td>John</td>
                    <td>Doe</td>
                    <td>john@example.com</td>
                </tr>
                <tr>
                    <td>Mary</td>
                    <td>Moe</td>
                    <td>mary@mail.com</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
